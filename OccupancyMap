classdef OccupancyMap < handle
    %OCCUPANCYMAP Summary of this class goes here
    %   Detailed explanation goes here
    
    properties
        Map
        MapRes
        X_axis
        Y_axis
    end
    
    methods
        function obj = OccupancyMap(size, res)
            obj.Map = zeros(size);
            obj.MapRes = res;
            
            obj.X_axis = [0 size(1)*res];
            obj.Y_axis = [0 size(2)*res];
        end
        
        function addPoints(obj, x, y, value)
            for i = 1 : length(x) 
                if obj.Map(sub2ind(size(obj.Map), x(i), y(i)))==0 % Si la case est inconnue slmt, on la remplie
                    obj.Map(sub2ind(size(obj.Map), x(i), y(i))) = value;
                elseif value ==3 % Position du youbot Ã©crase la couleur de la case (0 ou 1).
                    obj.Map(sub2ind(size(obj.Map), x(i), y(i))) = value;
                end
            end
        end
        function show(obj)
            imagesc(obj.X_axis, obj.Y_axis, obj.Map);
        end
    end
    
end
